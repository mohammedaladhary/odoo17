<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="example_email_template" model="mail.template">
            <field name="name">Example Email Template</field>
            <field name="subject">Estate Info: ${object.name}</field>
            <field name="model_id" ref="estate.model_estate_property" />
            <field name="body_html" type="html">
                <table border="0" cellpadding="0" cellspacing="0" style="padding-top: 16px; background-color: #F1F1F1; color: blue; width: 100%; border-collapse:separate;">
                    <tr>
                        <td>Name</td>
                        <td>Postal Code</td>
                        <td>Date Availability</td>
                    </tr>
                    <tr>
                        <td><t t-out="object.name or ''">Estate Name</t></td>
                        <td><t t-out="object.postcode or ''">Post Code</t></td>
                        <td><t t-out="object.date_availability or ''">Date Availability</t></td>
                    </tr>
                </table>
            </field>
        </record>
    </data>
</odoo>
