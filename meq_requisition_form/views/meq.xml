<odoo>
    <data>
        <record id="view_meq_request_form" model="ir.ui.view">
            <field name="name">meq.request.form</field>
            <field name="model">meq.request</field>
            <field name="arch" type="xml">
                <form string="MEQ New Request" create="true" edit="true">
                    <header>
                        <button class="oe_highlight" invisible="state not in ['draft']" name="action_submit" string="Submit" type="object"/>
                        <button invisible="state not in ['draft']" name="cancel" string="Cancel" type="object"/>
                        <field name="state" nolabel="1" readonly="1" statusbar_visible="draft,submit,committee_approve,store_approve,approve" widget="statusbar"/>
                    </header>
                    <sheet>
                        <h1>
                            <field default_focus="1" name="name" readonly="1"/>
                        </h1>
                        <group string="REQUESTER DETAILS">
                            <group>
                                <field name="request_date" readonly="1"/>
                                <field name="req_by" readonly="1"/>
                            </group>
                            <group>
                                <field name="contact"/>
                                <field name="dept_id" options='{"no_open": True}'/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Medical Equipment Details">
                                <group>
                                    <group>
                                        <field name="product_name"/>
                                        <field name="item_code"/>
                                        <field name="item_type"/>
                                        <field name="urgency"/>
                                        <field name="usage_location"/>
                                        <field name="uom"/>
                                    </group>
                                    <group>
                                        <field name="Equipment_month"/>
                                        <field name="quantity"/>
                                        <field name="description"/>
                                        <field name="cost"/>
                                        <field name="cost_subtotal" readonly="1"/>
                                    </group>
                                </group>
                                <group>
                                    <group>
                                        <field name="reason"/>
                                    </group>
                                    <group>
                                        <field name="attachment"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Additional Equipment Details">
                                <group>
                                    <group>
                                        <field name="backup_available"/>
                                        <field name="backup_details" invisible="backup_available != 'yes'" required="backup_available == 'yes'"/>
                                        <field name="replaces_existing"/>
                                        <field name="replaces_details" invisible="replaces_existing != 'yes'" required="replaces_existing == 'yes'"/>
                                        <field name="additional_doc_attached"/>
                                        <field name="additional_doc_details" invisible="additional_doc_attached != 'yes'" required="additional_doc_attached == 'yes'"/>
                                        <field name="urgency_justification"/>
                                        <field name="urgency_details" invisible="urgency_justification != 'yes'" required="urgency_justification == 'yes'"/>
                                        <field name="manpower_required"/>
                                        <field name="manpower_details" invisible="manpower_required != 'yes'" required="manpower_required == 'yes'"/>
                                        <field name="space_required"/>
                                        <field name="space_details" invisible="space_required != 'yes'" required="space_required == 'yes'"/>
                                    </group>
                                    <group>
                                        <field name="accessories_required"/>
                                        <field name="accessories_details" invisible="accessories_required != 'yes'" required="accessories_required == 'yes'"/>
                                        <field name="consumables_required"/>
                                        <field name="consumables_details" invisible="consumables_required != 'yes'" required="consumables_required == 'yes'"/>
                                        <field name="patient_usage"/>
                                        <field name="usage_details" invisible="patient_usage != 'yes'" required="patient_usage == 'yes'"/>
                                        <field name="used_in_other_departments"/>
                                        <field name="departments_details" invisible="used_in_other_departments != 'yes'" required="used_in_other_departments == 'yes'"/>
                                        <field name="other_factors"/>
                                        <field name="factors_details" invisible="other_factors != 'yes'" required="other_factors == 'yes'"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Sign-off Details">
                                <group>
                                    <group string="End User">
                                        <field name="eu_name"/>
                                        <field name="eu_date"/>
                                        <field name="eu_signature"/>
                                        <field name="eu_contact"/>
                                    </group>
                                    <group string="For HOD Only">
                                        <field name="eu_hod_name"/>
                                        <field name="eu_hod_date"/>
                                        <field name="eu_hod_signature"/>
                                        <field name="hod_comment" invisible="state == 'draft'" readonly="state != 'submit'"/>
                                    </group>
                                </group>
                            </page>
                             <page string="Committee Details" invisible="state == 'draft'">
                                <group>
                                    <field name="submitted_to_committee" invisible="state == 'draft'" readonly="state != 'committee_approve'"/>
                                    <field name="committee_status" invisible="state == 'draft'" readonly="state != 'committee_approve'"/>
                                    <field name="committee_comment" invisible="state == 'draft'" readonly="state != 'committee_approve'"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                        <field name="activity_ids" widget="mail_activity"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_meq_request_tree" model="ir.ui.view">
            <field name="name">meq.request.tree</field>
            <field name="model">meq.request</field>
            <field name="arch" type="xml">
                <tree>
                    <header>
                        <button name="equipment_xlsx_report" type="object" string="Print Excel Report" class="btn-primary"/>
					</header>
                    <field name="name"/>
                    <field name="dept_id" options='{"no_open": True}'/>
                    <field name="request_date"/>
                    <field name="req_by"/>
                    <field name="state"/>
                    <field name="committee_status" string="Comment"/>
                </tree>
            </field>
        </record>
        <record id="action_meq_request" model="ir.actions.act_window">
            <field name="name">New Equipment Creation</field>
            <field name="res_model">meq.request</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="menu_meq_root" name="MEQ"/>
        <menuitem id="menu_meq_item_creation" name="Equipment Item Creation" parent="menu_meq_root"/>
        <menuitem id="menu_meq_requests" name="Equipment Requests" parent="menu_meq_item_creation" action="action_meq_request"/>
    </data>
</odoo>