<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_meq_request_form" model="ir.ui.view">
            <field name="name">meq.request.form</field>
            <field name="model">meq.request</field>
            <field name="arch" type="xml">
                <form string="MEQ New Request" create="true" edit="true">
                    <header>
                        <field name="state" nolabel="1" readonly="1" widget="statusbar"
                               statusbar_visible="draft,submit,committee_approve,store_approve,approve"/>

                        <button invisible="state != 'draft'" name="action_submit" string="Submit" type="object"/>

                        <button class="oe_highlight" groups="meq_requisition_form.group_meq_hod"
                                invisible="state != 'submit'" name="hod_approve" string="Approve" type="object"/>
                        <button groups="meq_requisition_form.group_meq_hod"
                                invisible="state != 'submit'" name="reset_to_draft" string="Reset to Draft" type="object"/>

                        <button class="oe_highlight" groups="meq_requisition_form.group_meq_committee"
                                invisible="state != 'committee_approve'" name="committee_approve" string="Approve" type="object"/>
                        <button groups="meq_requisition_form.group_meq_committee"
                                invisible="state != 'committee_approve'" name="reset_to_hod" string="Reset To HOD" type="object"/>

                        <button class="oe_highlight" groups="meq_requisition_form.group_meq_store"
                                invisible="state != 'store_approve'" name="store_approve" string="Approve" type="object"/>
                        <button groups="meq_requisition_form.group_meq_store"
                                invisible="state != 'store_approve'" name="reset_to_committee" string="Reset to Committee" type="object"/>

                        <button confirm="Are you sure you want to reject?" name="reject" string="Reject" type="object"
                                groups="meq_requisition_form.group_meq_hod"
                                invisible="state not in ['submit']"/>

                        <button confirm="Are you sure you want to reject?" name="reject" string="Reject" type="object"
                                groups="meq_requisition_form.group_meq_committee"
                                invisible="state not in ['committee_approve']"/>

                        <button invisible="state != 'draft'" name="cancel" string="Cancel" type="object"/>
                    </header>
                    <sheet>
                        <h1>
                            <field default_focus="1" name="name" readonly="1"/>
                        </h1>
                        <group string="REQUESTER DETAILS">
                            <group>
                                <field name="request_date" readonly="1"/>
                                <field name="req_by" readonly="1" widget="badge"/>
                            </group>
                            <group>
                                <field name="contact" readonly="1"/>
                                <field name="dept_id" widget="badge"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Medical Equipment Details">
                                <group>
                                    <group>
                                        <field name="item_name" readonly="state in ['reject', 'approve']"/>
                                        <field name="item_code" readonly="state in ['reject', 'approve']"/>

                                        <field name="item_type" readonly="state in ['reject', 'approve']"/>
                                        <field name="urgency" widget="priority" readonly="state in ['reject', 'approve']"/>

                                        <field name="usage_location" readonly="state in ['reject', 'approve']"/>
                                        <field name="uom" readonly="state in ['reject', 'approve']"/>
                                    </group>
                                    <group>
                                        <field name="equipment_month" readonly="state in ['reject', 'approve']"/>
                                        <field name="quantity" readonly="state in ['reject', 'approve']"/>
                                        <field name="description" readonly="state in ['reject', 'approve']"/>

                                        <field name="cost" readonly="state in ['reject', 'approve']"/>
                                        <field name="cost_subtotal" readonly="1"/>
                                    </group>
                                </group>
                                <group>
                                    <group>
                                        <field name="reason" readonly="state in ['reject', 'approve']"/>
                                    </group>
                                    <group>
                                        <field name="attachment" readonly="state in ['reject', 'approve']"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Additional Equipment Details">
                                <group>
                                    <group>
                                        <field name="backup_available" readonly="state in ['reject', 'approve']"/>
                                        <field name="backup_details" invisible="backup_available != 'yes'" required="backup_available == 'yes'"/>

                                        <field name="replaces_existing" readonly="state in ['reject', 'approve']"/>
                                        <field name="replaces_details" invisible="replaces_existing != 'yes'" required="replaces_existing == 'yes'"/>

                                        <field name="additional_doc_attached" readonly="state in ['reject', 'approve']"/>
                                        <field name="additional_doc_details" invisible="additional_doc_attached != 'yes'" required="additional_doc_attached == 'yes'"/>

                                        <field name="urgency_justification" readonly="state in ['reject', 'approve']"/>
                                        <field name="urgency_details" invisible="urgency_justification != 'yes'" required="urgency_justification == 'yes'"/>

                                        <field name="manpower_required" readonly="state in ['reject', 'approve']"/>
                                        <field name="manpower_details" invisible="manpower_required != 'yes'" required="manpower_required == 'yes'"/>

                                        <field name="space_required" readonly="state in ['reject', 'approve']"/>
                                        <field name="space_details" invisible="space_required != 'yes'" required="space_required == 'yes'"/>
                                    </group>
                                    <group>
                                        <field name="accessories_required" readonly="state in ['reject', 'approve']"/>
                                        <field name="accessories_details" invisible="accessories_required != 'yes'" required="accessories_required == 'yes'"/>

                                        <field name="consumables_required" readonly="state in ['reject', 'approve']"/>
                                        <field name="consumables_details" invisible="consumables_required != 'yes'" required="consumables_required == 'yes'"/>

                                        <field name="patient_usage" readonly="state in ['reject', 'approve']"/>
                                        <field name="usage_details" invisible="patient_usage != 'yes'" required="patient_usage == 'yes'"/>

                                        <field name="used_in_other_departments" readonly="state in ['reject', 'approve']"/>
                                        <field name="departments_details" invisible="used_in_other_departments != 'yes'" required="used_in_other_departments == 'yes'"/>

                                        <field name="other_factors" readonly="state in ['reject', 'approve']"/>
                                        <field name="factors_details" invisible="other_factors != 'yes'" required="other_factors == 'yes'"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Committee and Sign-off Details" invisible="state == 'draft'">
                                <group>
                                    <group>
                                        <field name="hod_name" readonly="state != 'submit'"/>
                                        <field name="hod_date" readonly="state != 'submit'"/>

                                        <field name="hod_signature" readonly="state != 'submit'"/>
                                        <field name="hod_comment" readonly="state != 'submit'"/>
                                    </group>
                                    <group>
                                        <field name="submitted_to_committee" readonly="state != 'committee_approve'"/>
                                        <field name="committee_status" readonly="state != 'committee_approve'"/>

                                        <field name="committee_comment" readonly="state != 'committee_approve'"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                        <field name="activity_ids" widget="mail_activity"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_meq_request_tree" model="ir.ui.view">
            <field name="name">meq.request.tree</field>
            <field name="model">meq.request</field>
            <field name="arch" type="xml">
                <tree>
                    <header>
                        <button name="equipment_xlsx_report" type="object" string="Print Excel Report" class="btn-primary"/>
					</header>
                    <field name="name"/>
                    <field name="dept_id" options='{"no_open": True}'/>

                    <field name="request_date"/>
                    <field name="req_by"/>

                    <field name="state"/>
                    <field name="committee_status" string="Comment"/>
                </tree>
            </field>
        </record>

        <record id="action_meq_request" model="ir.actions.act_window">
            <field name="name">New Equipment Creation</field>
            <field name="res_model">meq.request</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_meq_request_hod" model="ir.actions.act_window">
            <field name="name">Pending HOD Approval</field>
            <field name="res_model">meq.request</field>

            <field name="view_mode">tree,form</field>
            <field name="domain">[('state', '=', 'submit')]</field>
        </record>

        <record id="action_meq_request_committee" model="ir.actions.act_window">
            <field name="name">Pending Committee Approval</field>
            <field name="res_model">meq.request</field>

            <field name="view_mode">tree,form</field>
            <field name="domain">[('state', '=', 'committee_approve')]</field>
        </record>

        <record id="action_meq_request_store" model="ir.actions.act_window">
            <field name="name">Pending Store Approval</field>
            <field name="res_model">meq.request</field>

            <field name="view_mode">tree,form</field>
            <field name="domain">[('state', '=', 'store_approve')]</field>
        </record>

        <menuitem id="menu_meq_root" name="MEQ"/>
        <menuitem id="menu_meq_item_creation" name="Equipment Item Creation" parent="menu_meq_root"/>

        <menuitem id="menu_meq_requests" name="Equipment Requests" parent="menu_meq_item_creation" action="action_meq_request"/>
        <menuitem id="menu_meq_hod_pending" name="Pending HOD Approval" parent="menu_meq_item_creation" action="action_meq_request_hod"/>

        <menuitem id="menu_meq_committee_pending" name="Pending Committee Approval" parent="menu_meq_item_creation" action="action_meq_request_committee"/>
        <menuitem id="menu_meq_store_pending" name="Pending Store Approval" parent="menu_meq_item_creation" action="action_meq_request_store"/>

    </data>
</odoo>